@model CartModel

@{
    Layout = "_Layout";
    var cargoPrice= 7.00;
    var totalPrice = Model.CartTotal()+cargoPrice;
}
@await Html.PartialAsync("_navbar2")

<div class="container-fluid my-4">
    <h4>Sepetim</h4>
    <div class="row">
        @if (Model.CartItems.Count==0)
        {
            <div class="col-md-12">
                <div class="alert alert-danger">Sepetiniz Boş</div>
            </div>
        }
        <div class="col-md-8">
            <table class="table table-hover table-responsive">
                <thead>
                    <th></th>
                    <th class="col">Ürün Adı</th>
                    <th class="col">Ürün Fiyatı</th>
                    <th class="col">Miktarı</th>
                    <th class="col">Toplam</th>
                </thead>
                <tbody>
                    @foreach (var item in @Model.CartItems)
                    {
                        <tr>
                            <td><img src="~/img/Products/@item.ImageUrl"
                                    style="max-width: 100px;" alt=""></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Quantity*item.Price)</td>
                            <td>
                                <form asp-action="DeleteFromCart" asp-controller="Cart" method="post">
                                    <td>
                                        <input type="hidden" name="productId" value="@item.ProductId">
                                        <button class="btn btn-danger btn-sm">
                                            <i class="fas fa-times text-light"></i>
                                        </button>
                                    </td>
                                </form>
                                
                        </tr>
                    }

                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <table class="table">
                <tbody>
                    <tr>
                        <th class="h4">Sepet Tutarı</th>
                        <td class="h6">@Model.CartTotal().ToString("c")</td>
                        
                       
                    </tr>
                    <tr>
                        <th class="h4">Kargo Tutarı</th>
                        <td class="h6">@cargoPrice.ToString("c")</td>
                        
                    </tr>
                    
                     <tr>
                        <td class="h4 text-danger">Toplam Tutar</td>
                        <td class="h6 text-danger">@totalPrice.ToString("c")</td>
                        
                    </tr>
                    
                    <tr>
                        <th></th>
                         <td><button asp-controller="shop" asp-action="order" class="btn btn-primary">Alışverişi Tamamla</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<h1></h1>