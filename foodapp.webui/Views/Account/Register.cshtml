@{
    Layout ="_Layout";
}
@model RegisterModel
@await Html.PartialAsync("_navbarRegister")

<hr>
<form asp-controller="Account" asp-action="Register" method="POST" >
    
    <div class="container">
        
        <h1 class="h3 my-4">Kayıt ol</h1>
        @await Html.PartialAsync("_messages")
        
        <div class="form-group">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div> 
            <label asp-for="FirstName" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="FirstName" type="text" class="form-control">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <label asp-for="LastName" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="LastName" type="text" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <label asp-for="UserName" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="UserName" type="text" class="form-control"
                    >
                    <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <label asp-for="Password" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>
                            
            <label asp-for="RePassword" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="RePassword" type="password" class="form-control">
                    <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>

            <label asp-for="Email" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="Email" type="text" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <span class="text-secondary">E-posta adresinizi doğru bir şekilde yazmanız gerekmektedir. E-posta adresinize aktivasyon linki gönderilecektir. Aktivasyon tamamlandığı zaman giriş yapabilirsiniz.</span>
            </div>

            
        </div>
        
        
       <button class="btn btn-primary m-4" type="submit">Kayıt ol</button>
    </div>

</form>

@section Scripts{
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" integrity="sha512-EanukVTZc4W9tUCLnDl069Izidg49PcNRKO1upLzKt9ajq66i+bXOtlzXcIbRhb6vVEGF6BCc8wQi5T1ztCpTQ==" crossorigin="anonymous"></script>
}
