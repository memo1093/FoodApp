@{
    Layout ="_Layout";
}
@model ResetPasswordModel
@await Html.PartialAsync("_navbarRegister")

<form asp-controller="Account" asp-action="ResetPassword" method="POST" >
    
    <div class="container">
        
        <h1 class="h3 my-4">Şifre Sıfırlama</h1>
        @await Html.PartialAsync("_messages")
        <div class="text-danger" asp-validation-summary="ModelOnly"></div> 
        <input type="hidden" asp-for="Token">
        <div class="form-group">
           
            <label asp-for="Email" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="Email" type="text" class="form-control"
                    >
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <label asp-for="Password" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-5">
                <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        
        
       <button class="btn btn-primary m-4" type="submit">Şifreyi Sıfırla</button>

    </div>

</form>