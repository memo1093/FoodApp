@model CategoryModel

<div class="modal fade" id="Modal-@Model.CategoryId" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bilgilendirme</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <div class="alert alert-danger">Kategoriyi silmek kategori içerisindeki mevcut ürünlerinde silinmesine sebep olacaktır. Devam etmek istediğinize eminmisiniz?</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-danger">Sil</button>
      </div>
    </div>
  </div>
</div>