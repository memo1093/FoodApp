@{
    Layout = "_Layout";
    
}
@model RoleModel


@await Html.PartialAsync("_navbar2")


<hr>
<div class="container">
<form asp-controller="Admin" asp-action="CreateRole" method="POST">
    
    
        
        <h1 class="h3 my-4">Rol Oluştur</h1>
        <div class="text-warning" asp-validation-summary="ModelOnly"></div>
        <partial name="_messages" model="@(TempData.Get<AlertMessage>("message"))" />
        
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label mb-2"></label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control">
                    <span asp-validation-for="Name" class="text-danger my-2"></span>
        </div>
        <button class="btn btn-primary my-4" type="submit">Oluştur</button>
    
</form>
</div>




